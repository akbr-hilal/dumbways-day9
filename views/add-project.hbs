        <div
            class="container-fluid fluid d-flex justify-content-center align-items-center bg-blue"
        >
            <div class="container-form">
                <h2 class="fw-bold text-center">Add My Project</h2>
                <form action="/add-project" method="post">
                    <div class="mb-2">
                        <label
                            for="exampleInputProject"
                            class="form-label fw-semibold"
                            >Project Name</label
                        >
                        <input
                            type="text"
                            class="form-control"
                            id="exampleInputProject"
                            name="titleProject"
                        />
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col">
                            <label
                                for="inputStartDate"
                                class="form-label fw-semibold"
                                >Start Date</label
                            >
                            <input
                                type="date"
                                class="form-control"
                                id="inputStartDate"
                                name="startDateProject"
                            />
                        </div>
                        <div class="col">
                            <label
                                for="inputEndDate"
                                class="form-label fw-semibold"
                                >End Date</label
                            >
                            <input
                                type="date"
                                class="form-control"
                                id="inputEndDate"
                                name="endDateProject"
                            />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label
                            for="exampleInputProject"
                            class="form-label fw-semibold"
                            >Description</label
                        >
                        <textarea
                            class="form-control"
                            id="exampleFormControlTextarea1"
                            rows="3"
                            name="descriptionProject"
                        ></textarea>
                    </div>

                    <div class="mb-2">
                        <label
                            for="exampleInputProject"
                            class="form-label fw-semibold"
                            >Technologies</label
                        >
                        <div class="row g-0">
                            <div class="form-check col">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    value="fa-node-js"
                                    id="flexCheckNode"
                                    name="technologisProject"
                                />
                                <label
                                    class="form-check-label"
                                    for="flexCheckNode"
                                >
                                    Node JS
                                </label>
                            </div>
                            <div class="form-check col">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    value="fa-react"
                                    id="flexCheckReact"
                                    name="technologisProject"
                                />
                                <label
                                    class="form-check-label"
                                    for="flexCheckReact"
                                >
                                    React JS
                                </label>
                            </div>
                        </div>
                        <div class="row g-0">
                            <div class="form-check col">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    value="fa-angular"
                                    id="flexCheckAngular"
                                    name="technologisProject"
                                />
                                <label
                                    class="form-check-label"
                                    for="flexCheckAngular"
                                >
                                    Angular JS
                                </label>
                            </div>
                            <div class="form-check col">
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    value="fa-laravel"
                                    id="flexCheckLaravel"
                                    name="technologisProject"
                                />
                                <label
                                    class="form-check-label"
                                    for="flexCheckLaravel"
                                >
                                    Laravel
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="formFile" class="form-label fw-semibold"
                            >Upload Image</label
                        >
                        <input class="form-control" type="file" id="formFile" name="imageProject" />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <input type="submit" class="btn btn-dark col-md-6" value="Submit">

                    </div>
                </form>
        </div>
