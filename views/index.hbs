                </div>
            </div>
        </div>

        <div class="container-fluid2 mt-lg-5 ">
            <div class="pt-4 mt-5">
                <p class="h2 text-center fw-bold mb-5 "> My Project </p>
                <div class="container-lg bg-white d-flex">
                    <div class="row row-cols-md-3 row-cols-1">
                        {{#each projects}}  
                        <div class="col">
                            <div class="card bg-light mb-5 p-0 mx-auto mx-md-0">
                                <img
                                    src="../assets/img/uplabs.png"
                                    class="card-img-top"
                                    alt=""
                                />
                                <div class="card-body">
                                    <a href="/project-detail/{{@index}}" class="text-decoration-none">
                                    <h5 class="card-title m-0 p-0 text-dark">{{this.title}} </h5>
                                    </a>
                                    <p class="mb-3"><small>Durasi : {{this.duration}}</small></p>
                                    <p class="card-text mb-4">
                                        {{this.description}}
                                        
                                    </p>
                                </div>
                                <div class="card-body">
                                    <i class="fa-brands {{this.technologis.[0]}}"></i> 
                                    <i class="fa-brands {{this.technologis.[1]}}"></i> 
                                    <i class="fa-brands {{this.technologis.[2]}}"></i> 
                                    <i class="fa-brands {{this.technologis.[3]}}"></i>
                                </div>

                                {{#if isLogin}}
                                    <div class="gap-2 d-lg-flex mb-3 justify-content-center align-items-center">
                                        <a href="/edit-project/{{@index}}" class="btn btn-dark text-decoration-none col-lg-5 d-block mb-lg-0 col-10 mb-3 ms-4 ms-md-0" type="button">
                                            Edit
                                        </a>
                                        <a href="/del-project/{{@index}}" class="btn btn-dark text-decoration-none col-lg-5 d-block col-10 ms-4 ms-md-0" type="button">
                                            Delete
                                        </a>
                                    </div>
                                {{/if}}
    
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
